using System;

namespace masiv
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] array = new int[5];
            int min;
            int max;
            int indexMax = 0;
            int indexMin = 0;
            for (int i = 0; i <5; i++)
            {
                Console.WriteLine("Введите {0} элемент массива", i);
                array[i] = Convert.ToInt32(Console.ReadLine());
            }
            max = array[0];
            min = array[0];
            for (int i = 0; i <5; i++)
            {
                if (array[i] > max)
                {
                    max = array[i];
                    indexMax = i;
                }
                if (array[i] < min)
                {
                        min = array[i];
                        indexMin = i;
                }
                
            }
             Console.WriteLine("Максимальное число в массиве: {0}", max);
            Console.WriteLine("Минимальное число в массиве: {0}", min);
            Console.WriteLine("Минимальный индекс : " + indexMin);
            Console.WriteLine("Максимальный индекс : " + indexMax);
        }

    }
}

